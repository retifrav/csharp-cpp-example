<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFramework>net9.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
  </PropertyGroup>

  <Import Project="../common.props" />

  <PropertyGroup>
    <ApplicationTargetPlatform>desktop</ApplicationTargetPlatform>
  </PropertyGroup>

  <PropertyGroup Condition="$([MSBuild]::IsOSPlatform('Windows'))">
    <DefineConstants>OS_WINDOWS</DefineConstants>
  </PropertyGroup>
  <PropertyGroup Condition="$([MSBuild]::IsOSPlatform('Linux'))">
    <DefineConstants>OS_LINUX</DefineConstants>
    <LibraryExtension>so</LibraryExtension>
  </PropertyGroup>
  <PropertyGroup Condition="$([MSBuild]::IsOSPlatform('OSX'))">
    <DefineConstants>OS_MAC</DefineConstants>
    <LibraryExtension>dylib</LibraryExtension>
  </PropertyGroup>

  <ItemGroup Condition="$(ApplicationTargetPlatform) == 'desktop'">
    <ContentWithTargetPath Include="$(MainProjectFolder)/build/cpp/library-c-api/libthingy-c-api$(DebugPostfix).$(LibraryExtension)">
      <TargetPath>libthingy-c-api$(DebugPostfix).$(LibraryExtension)</TargetPath>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </ContentWithTargetPath>
  </ItemGroup>

  <ItemGroup Condition="$(ApplicationTargetPlatform) == 'ios-simulator'">
    <ContentWithTargetPath Include="$(MainProjectFolder)/build/cpp/library-c-api/$(Configuration)-iphonesimulator/libthingy-c-api$(DebugPostfix).$(LibraryExtension)">
      <TargetPath>libthingy-c-api$(DebugPostfix).$(LibraryExtension)</TargetPath>
      <CopyToOutputDirectory>PreserveNewest</CopyToOutputDirectory>
    </ContentWithTargetPath>
  </ItemGroup>

</Project>
